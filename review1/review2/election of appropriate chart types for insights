                    <Tooltip content={<CustomTooltip />} />
                    <Bar dataKey="subscribers" fill="#10B981" radius={[0, 4, 4, 0]} />
                  </BarChart>
                </ResponsiveContainer>
                <p className="text-sm text-gray-600 mt-2">
